<!--Registro de usuario-->
<div class="container containerd d-flex justify-content-center align-items-center min-vh-100 ">

    <div class="col-md-6 border rounded-5 p-3 bg-white shadow">
        <div class="row align-items-center">
            <div class="header-text mb-4">
                <h2>Bienvenido</h2>
                <p>Ingresa tus datos para continuar.</p>
            </div>
            <form action="/auth/signup" method="post">
                <div class="input-group mb-3">
                    <input type="text" name="first_name" class="form-control form-control-lg bg-light fs-6"
                        placeholder="Nombre" value="{{first_name}}">
                </div>
                <div class="input-group mb-3">
                    <input type="text" name="last_name" class="form-control form-control-lg bg-light fs-6"
                        placeholder="Apellidos" value="{{last_name}}">
                </div>
                <div class="input-group mb-3">
                    <input type="text" name="address" class="form-control form-control-lg bg-light fs-6"
                        placeholder="Dirección" value="{{address}}">
                </div>
                <!--
                    <div class="input-group mb-3">
                    <input type="number" name="age" class="form-control form-control-lg bg-light fs-6" name="age"
                        id="age" min="0" max="120" placeholder="Edad" required>
                </div>
                -->
                <div class="input-group mb-3">
                    <input type="text" name="phone" class="form-control form-control-lg bg-light fs-6"
                        placeholder="Teléfono" value="{{phone}}">
                </div>
                <div class="input-group mb-3">
                    <input type="email" name="email" class="form-control form-control-lg bg-light fs-6"
                        placeholder="Correo" value="{{email}}">
                </div>
                <div class="input-group mb-3">
                    <input type="password" name="password" class="form-control form-control-lg bg-light fs-6"
                        placeholder="Contraseña" value="">
                </div>
                <div class="input-group mb-3">
                    <input type="password" name="confirm_password" class="form-control form-control-lg bg-light fs-6"
                        placeholder="Confirma tu contraseña" value="">
                </div>
                <div class="input-group mb-3">
                    <input type="hidden" name="position" class="form-control form-control-lg bg-light fs-6"
                        placeholder="" value="Cliente">
                </div>
                <div class="input-group mb-3">
                    <button class="btn btn-lg btn-primary w-100 fs-6">Regístrate</button>
                </div>
            </form>


            <div class="row">
                <small>¿Ya tienes una cuenta? <a href="/auth/signin">Inicia</a></small>
            </div>

        </div>
    </div>