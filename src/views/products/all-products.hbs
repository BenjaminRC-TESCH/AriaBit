<!-- product cards -->
<div class="container" id="product-cards">
    <div class="row" style="margin-top: 30px;">
        {{#each products}}
        <div class="col-md-3 py-3 py-md-0">
            <div class="card-shop animated-card">
                <img src="/uploads/{{image}}" class="img-fluid" style="height: 200px;">
                <div class=" card-body">
                    <h3>{{name}} </h3>
                    <p>{{description}}</p>
                    <h5>$ {{price}}</h5>
                    <input type="hidden" name="id_producto_carrito" value="">
                    <input type="hidden" name="nombre_producto_carrito" value="">
                    <input type="hidden" name="precio_producto_carrito" value="">
                    <a class="btn btn-primary btn-rounded" href="/products/edit/{{_id}}">Editar</a>
                    <form action="/products/delete/{{_id}}?_method=DELETE" method="POST"
                        class="form-check form-check-inline">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger btn-rounded">Eliminar</button>
                    </form>
                    <!--<button type="button" class="btn btn-dark btn-rounded">Agregar al carrito</button>-->
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
<!-- product cards -->